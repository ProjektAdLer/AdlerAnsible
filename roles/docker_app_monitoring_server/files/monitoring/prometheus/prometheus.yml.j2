global:
  scrape_interval: {{ docker_app_monitoring_server_prometheus_scrape_interval }}

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      {% for config in docker_app_monitoring_server_prometheus_scrape_configs_static_configs %}
      - targets: ['{{ config.host }}:{{ config.port | default(9100) }}']{% if config.comment is defined %}  # {{ config.comment }}{% endif %}
      {% endfor %}
